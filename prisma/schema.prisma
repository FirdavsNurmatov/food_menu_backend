datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Food {
  id          Int     @id @default(autoincrement())
  name        String
  image       String?
  price       Float
  description String?
  is_active   Boolean @default(true) // yangi maydon

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Schedule  Schedule[]
}

enum FoodCategory {
  FIRST // 1-taom
  SECOND // 2-taom
  SALAD // salat
}

model Schedule {
  id       Int          @id @default(autoincrement())
  date     DateTime
  foodId   Int
  category FoodCategory @default(FIRST)

  food Food @relation(fields: [foodId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([date, foodId])
}
